<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Payment Method Facade configuration -->
    <virtualType name="MoMoFacade" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="const">Magefox\MoMo\Model\Ui\ConfigProvider::CODE</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form</argument>
            <argument name="infoBlockType" xsi:type="string">Magento\Payment\Block\Info</argument>
            <argument name="valueHandlerPool" xsi:type="object">MoMoPaymentGatewayValueHandlerPool</argument>
            <argument name="commandPool" xsi:type="object">MomoPaymentGatewayCommandPool</argument>
        </arguments>
    </virtualType>

    <!-- Configuration reader -->
    <virtualType name="MoMoPaymentGatewayConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">Magefox\MoMo\Model\Ui\ConfigProvider::CODE</argument>
        </arguments>
    </virtualType>

    <!-- Logger, initialized with MoMoPaymentGatewayConfig -->
    <virtualType name="MoMoPaymentGatewayLogger" type="Magento\Payment\Model\Method\Logger">
        <arguments>
            <argument name="config" xsi:type="object">MoMoPaymentGatewayConfig</argument>
        </arguments>
    </virtualType>
    <type name="Magefox\MoMo\Gateway\Http\Client\ClientMock">
        <arguments>
            <argument name="logger" xsi:type="object">MoMoPaymentGatewayLogger</argument>
        </arguments>
    </type>

    <!-- Commands infrastructure -->
    <virtualType name="MomoPaymentGatewayCommandPool" type="Magento\Payment\Gateway\Command\CommandPool">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="capture" xsi:type="string">MoMoPaymentGatewayCaptureCommand</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Capture commands  -->
    <virtualType name="MoMoPaymentGatewayCaptureCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">Magefox\MoMo\Gateway\Request\CaptureRequest</argument>
            <argument name="handler" xsi:type="object">Magefox\MoMo\Gateway\Response\TransIdHandler</argument>
            <argument name="transferFactory" xsi:type="object">Magefox\MoMo\Gateway\Http\TransferFactory</argument>
            <argument name="validator" xsi:type="object">Magefox\MoMo\Gateway\Validator\ResponseCodeValidator</argument>
            <argument name="client" xsi:type="object">Magefox\MoMo\Gateway\Http\Client\ClientMock</argument>
        </arguments>
    </virtualType>

    <!-- Value handlers infrastructure -->
    <virtualType name="MoMoPaymentGatewayValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">MoMoPaymentGatewayConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="MoMoPaymentGatewayConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">MoMoPaymentGatewayConfig</argument>
        </arguments>
    </virtualType>
</config>